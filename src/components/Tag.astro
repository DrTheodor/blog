---
export interface Props {
	tag: string
}
const { tag } = Astro.props
---

<a href={`${import.meta.env.BASE_URL}/tags/${tag.toLowerCase()}`} aria-label={tag}>
	<span
		class='bg-cyan-600 font-semibold text-white dark:bg-cyan-900 dark:text-white shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full'
	>
		{tag ?? 'Blog Tag'}
	</span>
</a>
